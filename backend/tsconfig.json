{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"strict": true,
		"types": ["node", "hapi"],
		"esModuleInterop": true,
		"outDir": "dist",
		"rootDir": "src",
		"skipLibCheck": true,
		"incremental": true,
		"typeRoots": ["node_modules/@types"],
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
